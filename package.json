{
  "name": "rocketcode-framework-upgraded",
  "version": "1.0.0",
  "description": "A modern JavaScript framework combining React and Next.js functionality",
  "main": "packages/core/dist/index.js",
  "types": "packages/core/dist/index.d.ts",
  "scripts": {
    "build": "npm run build:core && npm run build:router && npm run build:ssr",
    "build:core": "cd packages/core && npm run build",
    "build:router": "cd packages/router && npm run build",
    "build:ssr": "cd packages/ssr && npm run build",
    "dev": "npm run dev:core",
    "dev:core": "cd packages/core && npm run dev",
    "dev:router": "cd packages/router && npm run dev",
    "dev:ssr": "cd packages/ssr && npm run dev",
    "test": "jest",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "keywords": [
    "react",
    "nextjs",
    "typescript",
    "framework",
    "ssr",
    "routing"
  ],
  "author": "RocketCode Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "esbuild": "^0.19.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
} 